    "ListSlaveInstances" : {
        "Type": "AWS::Lambda::Function",
        "Properties": {
          "Handler": "index.lambda_handler",
          "Role": { "Fn::GetAtt" : ["ListSlaveInstancesExecutionRole", "Arn"] },
          "Code": {
            "ZipFile":  { "Fn::Join": ["\n", [
              "import boto3",
              { "Fn::Sub": "client = boto3.client('ec2', region_name='${AWS::Region}')"},
              "def lambda_handler(event, context):",
              "    privates_ips = []",
              "    list = client.describe_instances(",
