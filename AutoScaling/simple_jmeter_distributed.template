    "InstanceLaunchConfig": {
      "Type": "AWS::AutoScaling::LaunchConfiguration",
      "Metadata" : {
        "Comment" : "Install jmeter",
        "AWS::CloudFormation::Init" : {
          "config" : {
            "files" : {
              "/etc/cfn/cfn-hup.conf" : {
                "content" : { "Fn::Join" : ["", [
                  "[main]\n",
                  "stack=", { "Ref" : "AWS::StackId" }, "\n",
                  "region=", { "Ref" : "AWS::Region" }, "\n"
                ]]},
                "mode"    : "000400",
                "owner"   : "root",
                "group"   : "root"
              },
              "/etc/cfn/hooks.d/cfn-auto-reloader.conf" : {
                "content": { "Fn::Join" : ["", [
                  "[cfn-auto-reloader-hook]\n",
                  "triggers=post.update\n",
                  "path=Resources.LaunchConfig.Metadata.AWS::CloudFormation::Init\n",
                  "action=/opt/aws/bin/cfn-init -v ",
                  "         --stack ", { "Ref" : "AWS::StackName" },
                  "         --resource InstanceLaunchConfig ",
                  "         --region ", { "Ref" : "AWS::Region" }, "\n",
                  "runas=root\n"
                ]]}
              },
              "/home/ec2-user/install_jmeter.sh" : {
                "content": { "Fn::Join" : ["", [
                  "#!/bin/bash -xe\n",
                  "cd /tmp\n",
                  "wget -O apache-jmeter-3.1.tgz.md5 https://www.apache.org/dist/jmeter/binaries/apache-jmeter-3.1.tgz.md5\n",
                  "wget -O apache-jmeter-3.1.tgz http://www-us.apache.org/dist/jmeter/binaries/apache-jmeter-3.1.tgz\n",
                  "md5sum -c apache-jmeter-3.1.tgz.md5\n",
                  "tar zxvf apache-jmeter-3.1.tgz -C /home/ec2-user/\n",
                  "rm -f apache-jmeter-3.1.tgz.md5 apache-jmeter-3.1.tgz\n"
                ]]}
              }
            },
            "services" : {
              "sysvinit" : {
                "cfn-hup" : { "enabled" : "true", "ensureRunning" : "true",
                  "files" : ["/etc/cfn/cfn-hup.conf", "/etc/cfn/hooks.d/cfn-auto-reloader.conf"]}
              }
            },
            "commands": {
              "install_dep": {
                "command" : {
                  "Fn::Join" : ["; ", [
                    "cd /tmp",
                    "/bin/sh /home/ec2-user/install_jmeter.sh"
                  ]]
                },
                "ignoreErrors" : "false"
              }
            }
          }
        }
      },
      "Properties": {
        "ImageId" : { "Fn::FindInMap" : [ "AWSRegionArch2AMI", { "Ref" : "AWS::Region" },
          { "Fn::FindInMap" : [ "AWSInstanceType2Arch", { "Ref" : "InstanceType" }, "Arch" ] } ] },
